<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/firstMenuFragment"
    tools:context=".TodayAllergy"
    android:orientation="vertical"
    android:background="#ffffff">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<!--        뒤로가기 버튼-->
        <ImageButton
            android:id="@+id/btn_todayallegy_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/todayallegybackbtn"/>

    <!--    상단의 '오늘의 알러지 지수' 텍스트-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 알러지 지수"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="78dp"/>
    </FrameLayout>


        <!--    Level 1 아이콘 이미지-->
        <ImageView
            android:id="@+id/Imglevelone"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            android:src="@drawable/levelone" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

<!--           1번. 흰색 박스-->
            <ImageView
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:background="@drawable/today_allergy_box"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="32dp"
                />

            <!--온도 아이콘-->
            <ImageView
                android:layout_width="43dp"
                android:layout_height="67dp"
                android:background="@drawable/today_allergy_temperature_icon"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="82dp"
                />

            <!--습도 아이콘-->
            <ImageView
                android:layout_width="27dp"
                android:layout_height="70dp"
                android:background="@drawable/today_allergy_huminity_icon"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="80dp"
                />

            <!--꽃가루 아이콘-->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:background="@drawable/today_allergy_flower_icon"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="80dp"
                />

            <!--미세먼지 아이콘-->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:background="@drawable/today_allergy_dusty_icon"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="80dp"
                />

<!--          회색 선-->
            <View
                android:layout_width="770px"
                android:layout_height="2px"
                android:background="#D5D5D5"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="170dp"
                />


<!--            온도 텍스트-->
            <TextView
                android:id="@+id/text_today_allegy_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textSize="25dp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="73dp"
                android:textStyle="bold"
                />

            <!--            습도 텍스트-->
            <TextView
                android:id="@+id/text_today_allegy_huminity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textSize="25dp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="150dp"
                android:textStyle="bold"
                />

            <!--            꽃가루 텍스트-->
            <TextView
                android:id="@+id/text_today_allegy_flower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textSize="25dp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="227dp"
                android:textStyle="bold"
                />

            <!--            미세먼지 텍스트-->
            <TextView
                android:id="@+id/text_today_allegy_dust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textSize="25dp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="300dp"
                android:textStyle="bold"
                />

            <!--           2번. 흰색 박스-->
            <ImageView
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:background="@drawable/today_allergy_box"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="32dp"
                />

            <!--            알러지 지수 텍스트-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알러지 지수"
                android:textSize="20dp"
                android:layout_marginTop="283dp"
                android:layout_marginLeft="90dp"
                android:textStyle="bold"
                />

            <!--            알러지 지수 숫자 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:textSize="29dp"
                android:layout_marginTop="275dp"
                android:layout_marginLeft="270dp"
                android:textStyle="bold"
                />

        </FrameLayout>
    </LinearLayout>


